= form_with(model: @micropost, remote: true) do |f|
  = render "shared/error_messages", object: f.object
  .field.title-form
    = f.text_field :title, class: "form-control", placeholder: "タイトル", id: "title-form"
  .field.time-form
    = f.number_field :time, class: "form-control", placeholder: "時間", id: "time-form"
  .field.content-form
    = f.text_area :content, class: "form-control", placeholder: "メモ", id: "content-form"

  = f.submit "投稿", class: "btn btn-block btn-info"
