%li.item{:id => "subject-#{subject.id}"}
  - if subject.picture
    %span.subject-picture= picture_for_subject(subject, size: 50)
  %br
  .subject-info
    %h5.name= subject.name
    - if current_user?(subject.user)
      .buttons
        .show-button.show-subject.subject-btn
          = link_to "詳細", subject_path(subject), class: ".btn btn-sm btn-info"
        .edit-button.edit-subject.subject-btn
          = link_to "編集", edit_subject_path(subject), class: ".btn btn-sm btn-secondary"
        .delete-button.delete-subject.subject-btn
          = link_to "削除", subject, method: :delete, data: {confirm: "本当にこのサブジェクトを削除してよろしいですか?"}, class: ".btn btn-sm btn-danger"
