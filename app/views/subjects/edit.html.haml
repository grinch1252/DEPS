-provide(:title, "Edit subject")
.input-container
  .row
    .col.form-box
      %h1.input-title Edit subject
      = form_with model: @subject, method: :patch, local: true do |f|
        =render "shared/error_messages", object: @subject
        .form-group
          .subject-edit
            .field.name-form
              = f.text_field :name, class: "form-control", placeholder: "name"
            .field.picture-form
              = f.file_field :picture

            =f.submit "Save Changes", class:"btn btn-info submit-btn"
