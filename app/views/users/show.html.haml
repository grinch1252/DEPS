- provide(:title, @user.name)
.container.show-container
  .row
    %aside.col-md-3
      %section.user_info
        %h1
          .user-image= picture_for @user
          .user-name= @user.name
    .col-md-9
      - if @user.microposts.any?
        .page-control= paginate @microposts
        %h4
          Logs (#{@user.microposts.count})
        %ol.microposts
          = render @microposts

    .row
      .col.bg-secondary
        figure
