- provide(:title, @user.name)
.container.show-container
  .row
    %aside.col-md-3
      %section.user_info
        %h1
          = picture_for @user
          = @user.name
    .col-md-9
      - if @user.microposts.any?
        %h3
          Logs (#{@user.microposts.count})
        = will_paginate @microposts
        %ol.microposts
          = render @microposts
    .row
      .col.bg-secondary
        figure
