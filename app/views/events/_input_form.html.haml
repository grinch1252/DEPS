#inputEventForm.modal.fade{:tabindex => "-1"}
  .modal-dialog.modal-nm
    .modal-content
      .modal-header
        %h4.modal-title 新しいイベント
      .modal-body
        = form_with(model: @event, url: events_path) do |e|
          .field.title-form
            = e.text_field :title, class: "form-control", placeholder: "タイトル"
          .field.time-form
            = e.datetime_field  :start, class: "form-control", placeholder: "XXXX-XX-XX"
            = e.datetime_field  :end, class: "form-control", placeholder: "XXXX-XX-XX"
          .field.body-form
            = e.text_area :body, class: "form-control", placeholder: "イベントの詳細"

          .event-btn= e.submit "イベント作成", class: "btn btn-block btn-info"