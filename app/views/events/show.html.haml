- provide(:title, @event.title)
.container.event-show-container
  .row
    .col-md-8.offset-md-2
      %h1.event-title= @event.title
      %h4.event-time= "#{@event.start.strftime("%Y-%m-%d %H:%M")} 〜#{@event.end.strftime("%Y-%m-%d %H:%M")}"
      %h4.event-detail= @event.body
      - if current_user?(@event.user)
        .event-delete-button
          = link_to "削除", @event, method: :delete, data: {confirm: "本当にこのイベントを削除してよろしいですか?"}, class: ".btn btn-sm btn-danger"
