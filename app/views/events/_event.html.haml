%li{:id => "event-#{event.id}"}
  |
  %span.title=event.title
  |
  %span.event-start-time
    = event.start.strftime("%Y-%m-%d %H:%M:%S")
  〜
  %span.event-end-time
    = event.end.strftime("%Y-%m-%d %H:%M:%S")
  %br
  %span.content
    = event.body
  - if current_user?(event.user)
    .delete-button
      = link_to "削除", event, method: :delete, data: {confirm: "本当にこのイベントを削除してよろしいですか?"}, class: ".btn btn-sm btn-danger"