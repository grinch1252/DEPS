-provide(:title, "パスワード再設定")
.input-container
  .row
    .col.form-box
      %h1.input-title パスワード再設定
      = form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f|
        = render "shared/error_messages"
        = hidden_field_tag :email, @user.email

        .form-group
          =f.text_field :password, class: "form-control", placeholder: "パスワード"
        .form-group
          =f.text_field :password_confirmation, class: "form-control", placeholder: "パスワード再確認"
        = f.submit "再設定", class: "btn btn-info submit-btn"